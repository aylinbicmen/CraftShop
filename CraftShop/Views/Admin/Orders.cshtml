@using CraftShop.Models.db;
@{
    Layout = "_AdminLayout";

    List<Order> orders = ViewBag.Orders;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

<h1 class="mb-4">ORDERS</h1>

<table class="table table-success table-hover" id="myTable">
    <thead>
        <tr>
            <th scope="col" class="text-center">#</th>
            <th scope="col" class="text-center">UserName</th>
            <th scope="col" class="text-center">Total</th>
            <th scope="col" class="text-center">Order Date</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < orders.Count; i++)
        {
            <tr>
                <th scope="row" class="text-center">@(i + 1)</th>
                <td class="text-center">@orders[i].Username</td>
                <td class="text-center">@orders[i].Total</td>
                <td class="text-center">@orders[i].OrderDate</td>
            </tr>
        }
    </tbody>
</table>