@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";

    Layout = "_IdentityLayout";
}

<h2 class="auth-heading text-center mb-5" style="color:#15406a; font-family:cursive;">Confirm Your Account.</h2>
<div class="auth-form-container text-start mx-auto">
    @{
        if (@Model.DisplayConfirmAccountLink)
        {
            <p class="text-center">
                <a id="confirm-link" href="@Model.EmailConfirmationUrl" class="text-link" style="color:#0d6efd;">Click here to confirm your account</a>
            </p>
        }
        else
        {
            <p class="text-center">
                Please check your email to confirm your account.
            </p>
        }
    }

    <div class="auth-option text-center pt-5"><a asp-action="Index" asp-controller="Home" style="color:#0d6efd;"><i class="fa-solid fa-house"></i> Return Home</a></div>

</div><!--//auth-form-container-->

