@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";

    Layout = "_IdentityLayout";
}

<h2 class="auth-heading text-center mb-5" style="color:#15406a; font-family:cursive;">Create a New Account</h2>
<div class="auth-form-container text-start mx-auto">
    <form class="auth-form auth-signup-form" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="email mb-3">
            <input asp-for="Input.Email" class="form-control signup-email" autocomplete="username" aria-required="true" placeholder="name@example.com" />
            <label asp-for="Input.Email" class="sr-only">Email</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="password mb-3">
            <input asp-for="Input.Password" class="form-control signup-password" autocomplete="new-password" aria-required="true" placeholder="password" />
            <label asp-for="Input.Password" class="sr-only">Password</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="password mb-3">
            <input asp-for="Input.ConfirmPassword" class="form-control signup-password" autocomplete="new-password" aria-required="true" placeholder="password" />
            <label asp-for="Input.ConfirmPassword" class="sr-only">Confirm Password</label>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="text-center mt-5">
            <button id="registerSubmit" type="submit" class="btn app-btn-primary w-100 theme-btn mx-auto" style="background-color:#0d6efd;">Register</button>
        </div>
    </form><!--//auth-form-->

    <div class="auth-option text-center pt-5">Already have an account? <a asp-area="Identity" asp-page="/Account/Login" class="text-link" style="color:#0d6efd;">Log in</a>.</div>
    <div class="auth-option text-center pt-3"><a asp-action="Index" asp-controller="Home" style="color:#0d6efd;"><i class="fa-solid fa-house"></i> Return Home Without Registiration</a></div>
</div><!--//auth-form-container-->

